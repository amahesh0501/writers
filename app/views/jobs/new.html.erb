<br/><br/>
<div class="container">
  <%= form_for [@job] do |f| %>
     <div class="form-group">
       <%= f.label :title %><br/>
       <%= f.text_field :title %>
    </div>
     <div class="form-group">
       <%= f.label :description %><br/>
       <%= f.text_area :description %>
    </div>
     <div class="form-group">
       <%= f.label :tier_requested %><br/>
       <%= select_tag(:tier_requested, options_for_select([['Tier 1 ($0.05 a word)', 1], ['Tier 2 ($0.10 a word)', 2], ['Tier 3 ($0.25 a word)', 3], ['Tier 4 ($0.50 a word)', 4], ['Tier 5 ($0.75 a word)', 5]])) %>
    </div>
     <div class="form-group">
       <%= f.label :word_count %><br/>
       <%= f.text_field :word_count %>
    </div>
     <div class="form-group">
       <%= f.label :due_date %><br/>
       <%= f.date_field :due_date %>
    </div>
   


    <%= f.submit 'Submit', :class => "btn btn-success" %>
  <% end %>
</div>

