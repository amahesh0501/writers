<div class="container">
	<h3><%= @client.name %></h3>
	<%= link_to "New Job", new_job_path %><br/><br/>

	<ul class="nav nav-tabs">
	  <li class="active"><a href="#open" data-toggle="tab">Open Jobs</a></li>
	  <li><a href="#started" data-toggle="tab">In-Progress Jobs</a></li>
	  <li><a href="#closed" data-toggle="tab">Completed Jobs</a></li>

	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
	  <div class="tab-pane active" id="open">
	  	<table class="table table-striped">
	  		<br/>
	  		<tr>
	  			<th>Title</th>
	  			<th>Amount Paid</th>
	  			<th>Due Date</th>
	  		</tr>
	  	  <% @open_jobs.each do |job| %>
	  	  	<tr>
	  	  		<td><%= link_to job.title, job_path(job) %><br/></td>
	  	  		<td><%= link_to "$#{number_with_precision(job.total_charge_to_client, :delimiter => ',', :precision => 2)}", job_path(job) if job.total_charge_to_client %><br/></td>
	  	  		<td><%= link_to job.due_date.strftime("%m/%d/%Y"), job_path(job) if job.due_date %><br/></td>
	  	  	<tr>
	  	  <% end %>
	  	</table>
	  </div>
	  <div class="tab-pane" id="started">
	  	<br/>

	  	<table class="table table-striped">
	  		<tr>
	  			<th>Title</th>
	  			<th>Amount Paid</th>
	  			<th>Due Date</th>
	  			<th>Status</th>
	  		</tr>
	  	  <% @started_jobs.each do |job| %>
	  	  	<tr>
	  	  		<td><%= link_to job.title, job_path(job) %><br/></td>
	  	  		<td><%= link_to "$#{number_with_precision(job.total_charge_to_client, :delimiter => ',', :precision => 2)}", job_path(job) if job.total_charge_to_client %><br/></td>
	  	  		<td><%= link_to job.due_date.strftime("%m/%d/%Y"), job_path(job) if job.due_date %><br/></td>
	  	  		<td><%= link_to job.status, job_path(job) %><br/></td>
	  	  	<tr>
	  	  <% end %>
	  	 </table>
	  </div>
	  <div class="tab-pane" id="closed">

	  	<table class="table table-striped">
	  		<br/>
	  		<tr>
	  			<th>Title</th>
	  			<th>Amount Paid</th>
	  			<th>Due Date</th>
	  		</tr>
	  	  <% @closed_jobs.each do |job| %>
	  	  	<tr>
	  	  		<td><%= link_to job.title, job_path(job) %><br/></td>
	  	  		<td><%= link_to "$#{number_with_precision(job.total_charge_to_client, :delimiter => ',', :precision => 2)}", job_path(job) if job.total_charge_to_client %><br/></td>
	  	  		<td><%= link_to job.due_date.strftime("%m/%d/%Y"), job_path(job) if job.due_date %><br/></td>
	  	  	<tr>
	  	  <% end %>
	  	 </table>
	  </div>
	</div>


</div>